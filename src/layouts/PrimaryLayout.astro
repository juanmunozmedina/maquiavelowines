---
import '@fontsource-variable/inter';
import { FATHOM_SITE_ID } from 'astro:env/client';
import { SolidQueryDevtools } from '~/components/SolidQueryDevtools.tsx';
import SEO from '~/components/layout/SEO.astro';
import SiteFooter from '~/components/layout/SiteFooter.astro';
import SiteHeader from '~/components/layout/SiteHeader.astro';
import SiteRibbon from '~/components/layout/SiteRibbon.astro';
import '../styles.css';
import { ViewTransitions } from 'astro:transitions';
import CookieConsent from '../components/CookieConsent.astro';

const defaults = {
	name: 'Bodegas Maquiavelo',
	description:
		'En Bodegas Maquiavelo, creemos que cada botella cuenta una historia. Ofrecemos vinos de pequeñas producciones que invitan a explorar y disfrutar de lo auténtico, perfectos para quienes buscan dejar atrás lo convencional y sorprender en cada encuentro.',
	image: {
		src: new URL('/social-v2.jpg?v=1', Astro.site).href,
		alt: 'Bodegas Maquiavelo',
	},
} as const;

type Props = {
	title: string;
};

const { title } = Astro.props;
---

<html lang="es" class="overflow-x-clip bg-white text-theme-base-900">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			async
			data-category="analytics"
			is:inline
			type="text/partytown"
			src="https://www.googletagmanager.com/gtag/js?id=G-L8WH2945BQ"></script>
		<script data-category="analytics" is:inline type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-L8WH2945BQ');
		</script>
		
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="shortcut icon" href="/favicon.ico" type="image/vnd.microsoft.icon" />
		<SEO {...defaults} {title} />

		{
			FATHOM_SITE_ID && (
				<script
					src="https://cdn.usefathom.com/script.js"
					data-site={FATHOM_SITE_ID}
					is:inline
					defer
				/>
			)
		}
		<ViewTransitions />
	</head>
	<body class="content-grid min-h-screen">
		<SiteRibbon />
		<div class={`breakout border-b w-full border-theme-base-300`}></div>
		<SiteHeader />
		<div class={`breakout border-b w-full border-theme-base-300`}></div>
		<slot />
		<div class="pt-24">
			<SiteFooter />
		</div>
		{import.meta.env.DEV && <SolidQueryDevtools client:idle />}
		<CookieConsent />
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
		></script>
	</body>
</html>
