---
import { button } from '~/styles.ts';
---

<script
	type="module"
	src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1/lite-youtube.min.js"></script>

<header
	class="breakout focus-ring-light relative h-[384px] max-h-dvh content-end justify-items-start gap-y-4 bg-black py-8 text-white md:h-[512px] md:gap-y-8 md:bg-bottom"
>
	<lite-youtube
		class="breakout absolute inset-0 size-full object-cover object-right-bottom"
		posterquality="maxresdefault"
		videoid="Lu-asv7RZaM"
		params="controls=0&enablejsapi=1&autoplay=1&playsinline=1&loop=1&showinfo=0&modestbranding=1"
	></lite-youtube>
	<div
		class="content relative text-4xl font-extrabold drop-shadow-md md:text-5xl md:leading-[50px]"
	>
		<h1 class="max-w-sm">Una experiencia enol√≥gica diferente</h1>
	</div>
	<div class="relative">
		<button
			class={button({ theme: 'light', className: 'font-bold md:h-12 md:text-lg' })}
			onclick="scrollIntoView('#products')">Compra ahora</button
		>
	</div>
</header>
