---
import { Icon } from 'astro-icon/components';
import ExternalLink from '~/components/ui/ExternalLink.astro';
import SocialIconLink from './SocialIconLink.astro';

export interface Props {
	class?: string;
}
---

<footer class={Astro.props.class}>
	<section class="flex flex-wrap items-center justify-between gap-y-4 py-4">
		<ul class="flex flex-wrap gap-2" aria-label="Métodos de pago admitidos">
			<li>
				<Icon name="visa" width={48} height={28} aria-hidden="true" />
				<div class="sr-only">Visa</div>
			</li>
			<li>
				<Icon name="mastercard" width={48} height={28} aria-hidden="true" />
				<div class="sr-only">Mastercard</div>
			</li>
			<li>
				<Icon name="paypal" width={48} height={28} aria-hidden="true" />
				<div class="sr-only">Paypal</div>
			</li>
			<li>
				<Icon name="apple-pay" width={48} height={28} aria-hidden="true" />
				<div class="sr-only">Apple Pay</div>
			</li>
			<li>
				<Icon name="klarna" width={48} height={28} aria-hidden="true" />
				<div class="sr-only">Klarna</div>
			</li>
			<li>
				<Icon name="amex" width={48} height={28} aria-hidden="true" />
				<div class="sr-only">Amex</div>
			</li>
		</ul>
		<ul class="flex flex-wrap gap-2" aria-label="Social links">
			<li>
				<SocialIconLink
					name="Facebook"
					icon="mdi:facebook"
					href="https://www.facebook.com/maquiavelowines"
					target="_blank"
				/>
			</li>
			<li>
				<SocialIconLink
					name="Instagram"
					icon="mdi:instagram"
					href="https://www.instagram.com/bodegasmaquiavelo/"
					target="_blank"
				/>
			</li>
			<li>
				<SocialIconLink
					name="Youtube"
					icon="mdi:youtube"
					href="https://www.youtube.com/@maquiavelowines"
					target="_blank"
				/>
			</li>
		</ul>
	</section>

	<div class="border-b border-theme-base-300"></div>

	<section
		class="flex flex-wrap justify-between gap-y-2 py-6 text-sm text-theme-base-600 dark:text-theme-base-100"
	>
		<p>
			{'© '}{new Date().getFullYear()}{' | Bodegas Maquiavelo ®'}
			<p class="flex flex-wrap gap-x-4">
				<a href="/cookies/" rel="nofollow" class="underline">Cookies</a>
				<a href="/legal/" rel="nofollow" class="underline">Aviso legal</a>
				<a href="/privacidad/" rel="nofollow" class="underline">Privacidad</a>
				<a href="/venta/" rel="nofollow" class="underline">Venta</a>
			</p>
		</p>
	</section>
	<section
		class="flex flex-wrap justify-between py-2 text-sm text-theme-base-600 dark:text-theme-base-100"
	>
		<p>
			Desarrollado por <ExternalLink
				href="https://juanmunozmedina.vercel.app/"
				class="underline"
				target="_blank"
				rel="noopener noreferrer"
			>
				Juan Muñoz Medina
			</ExternalLink>
		</p>
		<button
			id="theme-toggle"
			type="button"
			class="rounded-lg text-sm text-gray-500 hover:bg-gray-100 focus:outline-none dark:text-gray-400 dark:hover:bg-gray-700"
		>
			<svg
				id="theme-toggle-dark-icon"
				class="hidden h-5 w-5"
				fill="#334155"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
				><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg
			>
			<svg
				id="theme-toggle-light-icon"
				class="hidden h-5 w-5"
				fill="#f1f5f9"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
				><path
					d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
					fill-rule="evenodd"
					clip-rule="evenodd"></path></svg
			>
		</button>
	</section>
</footer>
