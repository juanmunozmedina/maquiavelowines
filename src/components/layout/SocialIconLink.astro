---
import { Icon } from 'astro-icon/components';
import type { HTMLAttributes } from 'astro/types';
import ExternalLink from '~/components/ui/ExternalLink.astro';

export interface Props extends HTMLAttributes<'a'> {
	name: string;
	href: string;
	icon: string;
	target: string;
}

const { name, icon, class: className = '', ...props } = Astro.props;
---

<ExternalLink
	class=`inline-block size-10 grid-center bg-slate-100 dark:bg-slate-700 hover:bg-theme-base-300 dark:hover:bg-slate-900 rounded transition ${className}`
	{...props}
>
	<Icon
		name={icon}
		title={name}
		class="size-6 text-theme-base-600 dark:text-theme-base-100"
		aria-hidden="true"
	/>
	<span class="sr-only">{name}</span>
</ExternalLink>
