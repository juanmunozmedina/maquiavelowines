<section class="py-4" id="section-wally-widget">
	<h2 class="mb-4 text-2xl font-bold md:text-3xl">Rese√±as de nuestros clientes</h2>
	<div id="wallyWidget" data-wally-widget="67d07418ff5d0b00140e2972" class="-m-2 h-full w-full">
	</div>
</section>
<script is:inline>
	function loadScript() {
		var script = document.createElement('script');
		script.setAttribute('is:inline', '');
		script.setAttribute('defer', '');
		script.setAttribute('id', 'getwally');
		script.src = 'https://embed.getwally.net/embed.js';
		document.head.appendChild(script);
	}

	function wallyWidgetScroll() {
		if (
			window.scrollY > 0 &&
			document.getElementById('wallyWidget') &&
			document.getElementById('getwally') == null
		) {
			loadScript();
		}
	}

	window.addEventListener('scroll', wallyWidgetScroll);

	document.addEventListener('astro:after-swap', () => {
		document.addEventListener('astro:page-load', wallyWidgetScroll);
	});
</script>
